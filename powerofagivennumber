echo "Input Number"
read no
echo "================"
echo "Input Power"
read power
echo "================"


counter=0
ans=1
while [ $power -ne $counter ]
do
        ans=`expr $ans \* $no`
	counter=`expr $counter + 1`
done
echo "******************************"
echo "$no power of $power is $ans"
echo "******************************"



